<%- include('partials/header') %>
<div class="ui container firstContainer">
    <div class="ui huge header" style="text-align: center;">
        Edit <%= blog.title%>
    </div>
    <div class="ui main text container segment">
        <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST" class="ui form">
            <div class="field">
                <label for="blog[title]">Title</label>
                <input type="text" value="<%= blog.title%>" name="blog[title]">
            </div>
            <div class="field">
                <label for="blog[image]">Image</label>
                <input type="text" value="<%= blog.image %>" name="blog[image]">
            </div>
            <div class="field">
                <label for="blog[body]">Body</label>
                <textarea name="blog[body]" cols="30" rows="10"><%= blog.body%></textarea>
            </div>
            <button type="submit" class="ui button">Submit</button>
        </form>
    </div>
    
</div>

<%- include('partials/footer') %>