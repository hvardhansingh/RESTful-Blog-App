<%- include('partials/header.ejs') %>

<div class="ui main text container firstContainer">
    <div class="ui huge header">Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <img src=" <%= blog.image %> " alt="">
                </div>
                <div class="content">
                    <a href="/blogs/<%=blog._id%>" class="header"><%= blog.title%></a>
                    <div class="meta">
                        <span><%= blog.created.toDateString()%></span>
                        <div class="description">
                            <p>
                                <%- blog.body.substring(0,100)%>...
                            </p>
                        </div>
                        <div class="extra">
                            <a class="positive ui animated button" tabindex="0" href="/blogs/<%=blog._id%>">
                                <div class="visible content">Read More</div>
                                <div class="hidden content">
                                    <i class="right chevron icon"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

</div>

<%- include('partials/footer.ejs') %>